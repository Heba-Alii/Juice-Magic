<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/remove_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/orange"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/remove_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Raisin"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/remove_checkbox"
        app:layout_constraintStart_toEndOf="@+id/remove_checkbox"
        app:layout_constraintTop_toTopOf="@+id/remove_checkbox" />
</androidx.constraintlayout.widget.ConstraintLayout>