<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.details.CardMenueDetails">

            <ImageView
                android:id="@+id/img_item"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginStart="32dp"
                android:background="@color/white"
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:civ_border_color="@color/orange"
                app:civ_border_width="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/img_item"
                app:layout_constraintStart_toStartOf="@+id/img_item"
                app:layout_constraintTop_toTopOf="@+id/img_item"
                app:layout_constraintVertical_bias="0.126" />

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Orange Juice"
                android:textColor="@color/orange"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/img_item"
                app:layout_constraintTop_toBottomOf="@+id/img_item" />

            <TextView
                android:id="@+id/item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:text="1.600 BHD"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/item_name"
                app:layout_constraintStart_toStartOf="@+id/item_name"
                app:layout_constraintTop_toBottomOf="@+id/item_name" />

            <RatingBar
                android:id="@+id/item_rating"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:stepSize="@integer/material_motion_duration_long_1"
                android:theme="@style/RatingBar"
                app:layout_constraintEnd_toStartOf="@id/item_review"
                app:layout_constraintStart_toStartOf="@+id/item_name"
                app:layout_constraintTop_toBottomOf="@+id/item_price" />

            <TextView
                android:id="@+id/item_review"
                android:layout_width="90dp"
                android:layout_height="17dp"

                android:layout_marginTop="16dp"
                android:text="@string/Reviews"

                android:textColor="@color/gray"

                app:layout_constraintBottom_toBottomOf="@+id/item_rating"
                app:layout_constraintEnd_toEndOf="@+id/item_name"

                app:layout_constraintStart_toEndOf="@+id/item_rating"
                app:layout_constraintTop_toBottomOf="@id/item_price" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/decrease_btn"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:background="@drawable/increase_button"
                android:text="-"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:layout_constraintEnd_toEndOf="@+id/item_rating"
                app:layout_constraintStart_toStartOf="@+id/item_rating"
                app:layout_constraintTop_toBottomOf="@+id/item_rating" />

            <EditText
                android:id="@+id/numbers_ET"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_numbers"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/increase_btn"
                app:layout_constraintEnd_toStartOf="@+id/increase_btn"
                app:layout_constraintStart_toEndOf="@+id/decrease_btn"
                app:layout_constraintTop_toTopOf="@+id/decrease_btn" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/increase_btn"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:background="@drawable/increase_button"
                android:text="+"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/decrease_btn"
                app:layout_constraintEnd_toEndOf="@+id/item_review"
                app:layout_constraintStart_toStartOf="@+id/item_review"
                app:layout_constraintTop_toTopOf="@+id/decrease_btn" />

            <TextView
                android:id="@+id/addition_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginTop="60dp"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"

                android:text="Additions"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/decrease_btn" />

            <CheckBox
                android:id="@+id/checkBox_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/orange"
                android:text="Raisin"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/addition_txt"
                app:layout_constraintTop_toBottomOf="@+id/addition_txt" />

            <CheckBox
                android:id="@+id/checkBox_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/orange"
                android:text="Hazelnut"
                app:layout_constraintEnd_toEndOf="@+id/checkBox_one"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/checkBox_one"
                app:layout_constraintTop_toBottomOf="@+id/checkBox_one" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/checkBox_two"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/without_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"

                android:text="Without"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/addition_txt"
                app:layout_constraintStart_toStartOf="@+id/addition_txt"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/without_txt" />

            <TextView
                android:id="@+id/addNotes_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"

                android:text="Add any notes"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/without_txt"
                app:layout_constraintStart_toStartOf="@+id/without_txt"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />


            <EditText
                android:id="@+id/add_note_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/card_view"
                android:elevation="10dp"
                android:padding="20dp"

                app:layout_constraintEnd_toEndOf="@+id/addNotes_txt"
                app:layout_constraintStart_toStartOf="@+id/addNotes_txt"
                app:layout_constraintTop_toBottomOf="@id/addNotes_txt" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/add_to_cart_btn"

                android:text="Add to card"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"
               android:paddingStart="120dp"
                android:paddingEnd="100dp"
                android:elevation="5dp"
                android:drawableLeft="@drawable/ic_baseline_shopping_cart_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/add_note_ET"
                app:layout_constraintStart_toStartOf="@+id/add_note_ET"
                app:layout_constraintTop_toBottomOf="@id/add_note_ET" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>