<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.details.CardMenueDetails">

        <ImageView
            android:id="@+id/img_item"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginStart="32dp"
            android:background="@color/white"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:civ_border_color="@color/orange"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/img_item"
            app:layout_constraintStart_toStartOf="@+id/img_item"
            app:layout_constraintTop_toTopOf="@+id/img_item"
            app:layout_constraintVertical_bias="0.126" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Orange Juice"
            android:textColor="@color/orange"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/img_item"
            app:layout_constraintTop_toBottomOf="@+id/img_item" />

        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:text="1.600 BHD"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/item_name"
            app:layout_constraintStart_toStartOf="@+id/item_name"
            app:layout_constraintTop_toBottomOf="@+id/item_name" />

        <RatingBar
            android:id="@+id/item_rating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:stepSize="@integer/material_motion_duration_long_1"
            android:theme="@style/RatingBar"
            app:layout_constraintEnd_toStartOf="@id/item_review"
            app:layout_constraintStart_toStartOf="@+id/item_name"
            app:layout_constraintTop_toBottomOf="@+id/item_price" />

        <TextView
            android:id="@+id/item_review"
            android:layout_width="90dp"
            android:layout_height="17dp"

            android:layout_marginTop="16dp"
            android:text="( 200 Review )"

            android:textColor="@color/gary"

            app:layout_constraintBottom_toBottomOf="@+id/item_rating"
            app:layout_constraintEnd_toEndOf="@+id/item_name"

            app:layout_constraintStart_toEndOf="@+id/item_rating"
            app:layout_constraintTop_toBottomOf="@id/item_price" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/appCompatButton"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@drawable/increase_button"
            android:text="-"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="@+id/item_rating"
            app:layout_constraintStart_toStartOf="@+id/item_rating"
            app:layout_constraintTop_toBottomOf="@+id/item_rating" />

        <EditText
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_numbers"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/appCompatButton2"
            app:layout_constraintEnd_toStartOf="@+id/appCompatButton2"
            app:layout_constraintStart_toEndOf="@+id/appCompatButton"
            app:layout_constraintTop_toTopOf="@+id/appCompatButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/appCompatButton2"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@drawable/increase_button"
            android:text="+"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"

            app:layout_constraintBottom_toBottomOf="@+id/appCompatButton"
            app:layout_constraintEnd_toEndOf="@+id/item_review"
            app:layout_constraintStart_toStartOf="@+id/item_review"
            app:layout_constraintTop_toTopOf="@+id/appCompatButton" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>